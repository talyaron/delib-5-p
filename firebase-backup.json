{
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    "functions": [
      {
        "source": "functions",
        "codebase": "default",
        "ignore": [
          "node_modules",
          ".git",
          "firebase-debug.log",
          "firebase-debug.*.log"
        ],
        "predeploy": [
          "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
      }
    ],
    "hosting": {
      "site": "delib-5",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    "emulators": {
      "auth": {
        "port": 9099
      },
      "functions": {
        "port": 5001
      },
      "firestore": {
        "port": 8080
      },
      "storage": {
        "port": 9199
      },
      "ui": {
        "enabled": true,
        "port": 5002
      },
      "singleProjectMode": true
    },
    "storage": {
      "rules": "storage.rules"
    }
  }